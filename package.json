{
  "name": "backend-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run db:client && pnpm run load:env nodemon",
    "devContainer": "pnpm run db:client && pnpm run load:env-devContainer prisma migrate deploy && pnpm run load:env-devContainer nodemon",
    "build": "rm -rf ./dist/* && pnpm run db:client && tsc -b && tsc -p tsconfig.prod.json && tsc-alias",
    "test": "vitest --silent",
    "test:check": "vitest run --silent ./",
    "cov": "vitest run --coverage",
    "cov:ui": "vitest --ui --coverage",
    "load:env": "dotenvx run -f .env.default -f .env.local --overload --",
    "load:env-devContainer": "dotenvx run -f .env.default -f .env.container --overload --",
    "db:client": "prisma generate",
    "db:generate": "pnpm run load:env prisma migrate dev --create-only",
    "db:deploy": "pnpm run load:env prisma migrate deploy",
    "lint:all": "pre-commit run --all-files",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix ./",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "fix": "pnpm run eslint:fix && pnpm run prettier:fix",
    "audit": "npx audit-ci",
    "license-compliance": "license-compliance -r detailed",
    "postinstall": "pre-commit install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.2",
    "@prisma/client": "5.20.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^5.0.0",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "multer": "1.4.5-lts.1",
    "prisma": "^5.22.0",
    "uuid": "^10.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@testcontainers/postgresql": "^10.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.15",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/eslint-plugin": "^1.1.31",
    "@vitest/ui": "^2.1.9",
    "audit-ci": "^7.1.0",
    "eslint": "9.9.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-strict-dependencies": "^1.3.15",
    "eslint-plugin-unicorn": "^56.0.1",
    "glob": "^11.0.1",
    "globals": "^15.15.0",
    "license-compliance": "^3.0.1",
    "node-mocks-http": "^1.16.2",
    "nodemon": "^3.1.9",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "testcontainers": "^10.18.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^2.1.9",
    "vitest-mock-extended": "^2.0.2"
  }
}
